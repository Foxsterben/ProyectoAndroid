<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="@color/red_error" />
            <gradient android:angle="-90" android:startColor="@color/red_error" android:endColor="@color/red_error"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="@color/md_orange_50" />
            <solid android:color="@color/red_error"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="@color/md_yellow_50" />
            <gradient android:angle="-90" android:startColor="@color/LDialogs_transparent" android:endColor="@color/LDialogs_transparent" />
        </shape>
    </item>
</selector>